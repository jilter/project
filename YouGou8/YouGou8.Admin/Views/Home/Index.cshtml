@{
    ViewBag.Title = "首页";
}

<div id="wrapper">
    @Html.Partial("../Shared/_Left")
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="panel panel-back noti-box">
                        <span class="icon-box bg-color-red set-icon">
                            <i class="fa fa-envelope-o"></i>
                        </span>
                        <div class="text-box">
                            <p class="main-text">@ViewBag.NewCount</p>
                            <p class="text-muted">新用户</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="panel panel-back noti-box">
                        <span class="icon-box bg-color-green set-icon">
                            <i class="fa fa-bars"></i>
                        </span>
                        <div class="text-box">
                            <p class="main-text">@ViewBag.LoginCount</p>
                            <p class="text-muted">访问人数</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="panel panel-back noti-box">
                        <span class="icon-box bg-color-blue set-icon">
                            <i class="fa fa-bell-o"></i>
                        </span>
                        <div class="text-box">
                            <p class="main-text">@ViewBag.BrowseCount</p>
                            <p class="text-muted">点击商品数</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            点击Top10
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>商品名称</th>
                                            <th>商品类目</th>
                                            <th>图片</th>
                                            <th>价格/优惠/红包</th>
                                            <th>点击数</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.ProductList != null) {
                                            foreach (var item in ViewBag.ProductList as List<YouGou8.Model.Product_MY>)
                                            {
                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td><a href="@item.CouponLink" target="_blank">@item.PTitle</a></td>
                                                    <td>@((ViewBag.CategoryList as List<SelectListItem>).Find(s => s.Value == item.PCID.ToString()).Text)</td>
                                                    <td>
                                                        @if (!string.IsNullOrWhiteSpace(item.PImgUrls))
                                                        {
                                                            <a href="@item.PImgUrls.Split('|')[0]" target="_blank">
                                                                <img style="width:50px" src="@item.PImgUrls.Split('|')[0]" />
                                                            </a>
                                                        }
                                                    </td>
                                                    <td>@item.PPrice/@item.CouponMoney/@item.PRedPack</td>
                                                    <td>@item.ClickCount</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /. ROW  -->
        </div>
        <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
</div>

