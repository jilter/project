@model YouGou8.Model.FreeRecord
@{
    ViewBag.Title = "编辑赠送记录";
}
<div id="wrapper">
    @Html.Partial("../Shared/_Left")
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <!-- Form Elements -->
                    <div class="panel panel-default">
                        <div class="panel-heading text-center">
                            编辑赠送记录
                        </div>
                        <div class="panel-body">
                            <form id="form-product" role="form" action="/record/add" method="post">
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.UserID, new { placeholder = "用户ID", @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.FreeID, new { placeholder = "赠品ID", @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Remark, new { placeholder = "备注", @class = "form-control" })
                                        </div>
                                        <div class="row text-center">
                                            @Html.HiddenFor(model=>model.ID)
                                            @Html.HiddenFor(model => model.FreeLink)
                                            @Html.HiddenFor(model => model.Status)
                                            @Html.HiddenFor(model => model.AddedTime)
                                            <button type="submit" class="btn btn-default">Submit</button>
                                        </div>
                                    </div>                               
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- End Form Elements -->
                </div>
            </div>
            <!-- /. ROW  -->
        </div>
        <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
</div>

