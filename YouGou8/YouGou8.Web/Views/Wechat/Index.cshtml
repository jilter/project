                if (ua.match(/MicroMessenger/i) == "micromessenger") {
                    return true;
                } else {
                    return false;
                }
            }

            var auto_resize = function () {
                if ($(window).width() > 450) {
                    $('.pet_list_one_nr').height($('.pet_list_one_img').height());
                } else {
                    $('.pet_list_one_nr').css({ "height": "auto" });
                }
            }

            var tips = function (title) {
                var $toast = $('#toast');
                if ($toast.css('display') != 'none') return;
                $('.weui-toast__content').text(title);
                $toast.fadeIn(100);
                setTimeout(function () {
                    $toast.fadeOut(100);
                }, 2000);
            }

