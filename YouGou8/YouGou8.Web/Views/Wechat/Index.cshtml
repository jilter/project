            var page = 1;
            var size = 50;
            var loading = false;
            var loadMore = true;

            var getCopyTemp = function (text, id) {
                if (text == null || typeof (text) == 'undefined') {
                    text = '';
                }
                var copyTemp = '<div class="copy">' +
                            '     <a class="am-btn am-btn-default am-radius am-btn-xs btn-copy" href="/wechat/p'+id+'">复制淘口令</a>' +
                            //'     <span>复制后打开☞手机淘宝☜查看并下单</span>' +
                            '  </div>';
                return copyTemp;
            }

            var getTaobaoTemp = function (link) {
                var taobaoTemp = '<div class="taobao">' +
                                '   <a target="_blank" class="am-btn am-btn-default am-radius am-btn-xs" href="'+link+'">去淘宝看看&gt;&gt;</a>' +
                                ' </div>';
                return taobaoTemp;
            }

            var getlist = function () {
                if (!loading) {
                    loading = true;
                    var title = $('#txt-title').val();
                    var start = $('#hid-start').val();
                    var end = $('#hid-end').val();
                    var id = $('#hid-id').val();
                    var flag = is_weixin();

                    $.post('/wechat/getlist', { id: id, title: title, start: start, end: end, page: page, size: size }, function (response) {
                        loading = false;
                        if (response && response.code == 0) {
                            if (response.data.length > 0) {
                                $("#div-nodata-try").hide();
                                $.each(response.data, function (index, item) {
                                    var salesTemp = item.sales > 0 ? '<div class="info-item">销量:' + item.sales + '</div>' : '<div class="info-item"></div>';
                                    var introTemp = item.intro != null && item.intro.length > 0 ? '<div class="am-list-item-text pet_list_one_text">推荐理由：' + item.intro + '</div>' : "";
                                    var template = '<li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-right pet_list_one_block">' +
                                                '       <div class="am-u-sm-4 am-list-thumb">' +
                                                '           <a target="_blank" href="' + (flag ? '/wechat/p' + item.id : item.link) + '"><img src="/assets-web/img/loading.gif" data-original="' + item.img + '" alt="' + item.title + '" style="margin:0;" /></a>' +
                                                '       </div>' +
                                                '       <div class="am-u-sm-8 am-list-main pet_list_one_nr">' +
                                                '           <h3 class="am-list-item-hd pet_list_one_bt"><a target="_blank" href="' + (flag ? '/wechat/p' + item.id : item.link) + '">' + item.title + '</a></h3>' + introTemp +
                                                '           <div class="info">' +
                                                '               <div class="info-item">' +
                                                '                   <span class="am-icon-coupon">¥' + item.coupon + '</span>' +
                                                '               </div>' +
                                                '               <div class="info-item" style="font-weight:bold; color:red;">券后:' + parseFloat(item.price - item.coupon).toFixed(1) + '&nbsp;&nbsp;</div>' + salesTemp +
                                                '           </div>' + (flag ? getCopyTemp(item.key, item.id) : getTaobaoTemp(item.link)) +
                                                '       </div>' +
                                                '</li>';
                                    $(".am-list").append(template);
                                });

                                //懒加载
                                $(".am-list-thumb img").lazyload({ threshold: 500 });

                                //if (response.data.length == size) {
                                //    setTimeout(function () { page++; getlist();},3000);
                                //}
                            } else {
                                loadMore = false;
                                if ($(".am-list").text() == "") {
                                    $("#div-nodata-try").show();
                                }
                            }
                            //copy_init();
                            auto_resize();
                            $("#loadingToast").hide();
                        } else {
                            tips('网络连接失败');
                            $("#loadingToast").hide();
                        }
                    }, "json");
                }
            }

            getlist();

            $(window).resize(function () {
                auto_resize();
            });

            $(window).scroll(function () {

                var sc = $(document).height() - $(window).height() - 700;
                if ($(window).scrollTop() > sc && !loading && loadMore) {
                    page++;
                    getlist();
                }
            });

            $('.am-list-thumb img').load(function () {
                auto_resize();
            });

            $('.pet_article_like li:last-child').css('border', 'none');            

            $('.pet_head_gd_ico').on('click', function () {
                if ($('.pet_more_list').hasClass("pet_more_list_show")) {
                    $('.pet_more_list').removeClass('pet_more_list_show');
                } else {
                    $("#txt-title").val("");
                    $('.pet_more_list').addClass('pet_more_list_show');
                }
            });

            $('.pet_more_close').on('click', function () {
                $('.pet_more_list').removeClass('pet_more_list_show');
            });

            $(".pet_more_list_block_name a").click(function () {
                var title = $(this).attr("search-data");
                $("#txt-title").val(title);
                page = 1;
                $('.pet_more_list').removeClass('pet_more_list_show');
                $("#loadingToast").show();
                $(".am-list").empty();
                $("body").scrollTop(0);
                getlist();
            });

